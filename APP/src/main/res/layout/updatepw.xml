<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE68A"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/black"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/backtomy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#FFF233"
            android:textSize="25dp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#637BFF"
            android:textSize="35px" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/login_boder"
            android:drawableStart="@drawable/loginicon"
            android:hint="用户名："
            android:textColorHint="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/line"
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/oldpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/login_boder"
            android:drawableStart="@drawable/loginicon"
            android:hint="旧密码："
            android:textColorHint="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/newpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/login_boder"
            android:drawableStart="@drawable/passwordicon"
            android:hint="新密码："
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/xian2"
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_below="@id/newpassword"
            android:layout_gravity="center"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/repeatnewpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/xian2"
            android:layout_gravity="center"
            android:background="@drawable/login_boder"
            android:drawableStart="@drawable/passwordicon"
            android:hint="确认新密码："
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <Button
            android:id="@+id/updatepassword_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>