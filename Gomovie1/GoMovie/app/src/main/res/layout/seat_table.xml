<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gomovie.SeatTableActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#cfa49a"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/backtoinfo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="#cfa49a"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Seat Table"
            android:textColor="#FFFFFF"
            android:textSize="20dp" >
        </TextView>
    </LinearLayout>

    <com.example.gomovie.SeatTable
        android:id="@+id/seatView"
        android:layout_width="wrap_content"
        android:layout_height="344dp"
        android:layout_weight="0.49"
        android:background="#ffffff" />

    <Button
        android:id="@+id/ensureseat"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#c76968"
        android:gravity="center"
        android:text="Confirm seats"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>