<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f1eb"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#cfa49a"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:text="Login/Register"
            android:textColor="#eee6df"
            android:textSize="30dp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/login1"
            android:layout_width="186dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="payment"
            android:textColor="#eee6df"
            android:textSize="25dp"
            android:textStyle="italic"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:text="     Ticket information"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="italic" />
        <LinearLayout
            android:id="@+id/usedll"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/used_image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ticket" />

            <TextView
                android:id="@+id/used_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="On order"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TableLayout
                android:id="@+id/MorePageTableLayout_Follow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="1.0dip"
                android:shrinkColumns="0"
                android:stretchColumns="0" >

                <TableRow
                    android:id="@+id/page_manager"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp" >

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="311dp"
                        android:layout_height="64dp"
                        android:background="#FFFFFF"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="17.0dip"
                        android:text="Edit password"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:paddingRight="20.0dip"
                        android:background="#FFFFFF"
                        android:src="@drawable/go" />

                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TableLayout
                android:id="@+id/MorePageTableLayout_Client"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="1.0dip"
                android:shrinkColumns="0"
                android:stretchColumns="0" >

                <TableRow
                    android:id="@+id/page_about"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp" >

                    <TextView
                        android:layout_width="314dp"
                        android:layout_height="59dp"
                        android:background="#FFFFFF"
                        android:drawableLeft="@drawable/about"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="17.0dip"
                        android:text="About us"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:paddingRight="20.0dip"
                        android:background="#FFFFFF"
                        android:src="@drawable/go" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="     Exit System"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="italic" />
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text="     Logout"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <!--</ScrollView>-->
    </LinearLayout>
</LinearLayout>
