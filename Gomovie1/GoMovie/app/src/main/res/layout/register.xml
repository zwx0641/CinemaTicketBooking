<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f1eb"
    android:orientation="vertical"
    tools:context="com.example.gomovie.RegisterActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/signup"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backtologin"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginTop="0dp"
                android:drawableStart="@drawable/loginicon"
                android:hint=" Username："
                android:textColorHint="#696f6c"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/number"
                android:layout_gravity="center"
                android:layout_marginEnd="0dp"
                android:drawableStart="@drawable/passwordicon"
                android:hint=" Password："
                android:inputType="textPassword"
                android:textColorHint="#696f6c"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/repeatpassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/password"
                android:layout_gravity="center"
                android:drawableStart="@drawable/passwordicon"
                android:hint=" Confirm："
                android:inputType="textPassword"
                android:textColorHint="#696f6c"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/repeatpassword"
                android:layout_gravity="center"
                android:drawableStart="@drawable/passwordicon"
                android:hint=" Email："
                android:inputType="textPassword"
                android:textColorHint="#696f6c"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/email"
                android:layout_gravity="center"
                android:drawableStart="@drawable/passwordicon"
                android:hint=" Age："
                android:inputType="textPassword"
                android:textColorHint="#696f6c"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#f3f1eb"
            android:text="Have account already? Sign in"
            android:textColor="#cfa49a"
            android:textSize="16sp"
            style="?android:attr/borderlessButtonStyle"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>